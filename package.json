{
  "scripts": {
    "build": "npm-run-all eleventy:build tailwind:build",
    "watch": "npm-run-all --parallel eleventy:watch tailwind:watch",
    "serve": "npm-run-all --parallel eleventy:serve tailwind:watch",
    "start": "npm-run-all --parallel eleventy:serve tailwind:watch",
    "eleventy:build": "ELEVENTY_PRODUCTION=true eleventy",
    "eleventy:debug": "DEBUG=* eleventy",
    "eleventy:serve": "eleventy --serve",
    "eleventy:watch": "eleventy --watch",
    "forestry:preview": "npm-run-all eleventy:build tailwind:build --parallel eleventy:serve tailwind:watch",
    "tailwind:build": "NODE_ENV=production npx tailwindcss -i css/tailwind.css -c tailwind.config.js -o _site/css/styles.css --minify",
    "tailwind:watch": "npx tailwindcss -i css/tailwind.css -c tailwind.config.js -o _site/css/styles.css --watch"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@11ty/eleventy-navigation": "^0.3.2",
    "@11ty/eleventy-plugin-rss": "^1.1.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "@tailwindcss/typography": "^0.5.0",
    "autoprefixer": "^10.4.0",
    "luxon": "^2.3.0",
    "markdown-it": "^12.0.4",
    "markdown-it-anchor": "^8.4.0",
    "markdown-it-footnote": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.6",
    "tailwindcss": "^3.0.1"
  }
}
