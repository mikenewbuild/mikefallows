{
  "scripts": {
    "dev": "npm run start",
    "build": "npm-run-all eleventy:build tailwind:build rollup:build",
    "start": "rimraf _site && npm-run-all --parallel eleventy:serve rollup:watch tailwind:watch",
    "tina": "npm-run-all --parallel tina:dev dev",
    "tina:build": "npx tinacms build",
    "tina:dev": "npx tinacms dev",
    "eleventy:build": "ELEVENTY_ENV=production eleventy",
    "eleventy:debug": "DEBUG=* eleventy",
    "eleventy:serve": "eleventy --serve --quiet",
    "eleventy:watch": "eleventy --watch --quiet",
    "rollup:build": "rollup --config",
    "rollup:watch": "rollup --config --watch",
    "tailwind:build": "NODE_ENV=production npx @tailwindcss/cli -i css/tailwind.css -c tailwind.config.js -o _site/css/styles.css --minify",
    "tailwind:watch": "npx @tailwindcss/cli -i css/tailwind.css -c tailwind.config.js -o _site/css/styles.css --watch"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-navigation": "^1.0.4",
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.9",
    "cssnano": "^7.0.6",
    "eleventy-plugin-time-to-read": "^1.3.0",
    "luxon": "^3.3.0",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.1.0",
    "markdown-it-footnote": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "pagefind": "^1.1.1",
    "postcss": "^8.4.31",
    "rimraf": "^6.0.1",
    "rollup": "^4.35.0",
    "tailwindcss": "^4.1.18"
  },
  "dependencies": {
    "@tinacms/cli": "^2.0.4",
    "alpinejs": "^3.10.3",
    "tinacms": "^3.1.1"
  }
}
